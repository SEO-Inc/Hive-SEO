@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Role Manager";
    ViewBag.Description = "Add, update and delete system roles";
}
@section css
{
    <link href="~/Scripts/datatables/dataTables.bootstrap.css" rel="stylesheet" />
}
@section scripts
{

    <script src="~/Scripts/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/datatables/dataTables.bootstrap.js"></script>
    <script src="~/Scripts/datatables/yadcf/jquery.dataTables.yadcf.js"></script>
    <script src="~/Scripts/datatables/tabletools/dataTables.tableTools.min.js"></script>
}
<p>
    @Html.ActionLink("New Role", "Create", "", new { @class = "btn btn-primary btn-icon" })
</p>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Roles</h3>

        <div class="panel-options">
            <a href="@Url.Action("Create","RolesAdmin")">
                <span class="expand-icon">+</span>
            </a>
        </div>
    </div>
    <div class="panel-body">
        <script type="text/javascript">
            jQuery(document).ready(function ($) {
                $("#roles-1").dataTable({
                    aLengthMenu: [
                        [10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]
                    ]
                });
            });
        </script>
        <table id="roles-1" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                    <th>

                    </th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm btn-icon icon-left" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm btn-icon icon-left" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm btn-icon icon-left" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
