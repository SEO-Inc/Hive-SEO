@model Hive.Models.RoleViewModel
@{
    ViewBag.Title = "Edit Role";
    ViewBag.Description = "Edit role details";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">Role details</h4>
        <div class="panel-options">
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <span>
                            @Html.ActionLink("Cancel", "Index", "", new { @class = "btn btn-danger" })
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Back to Roles List", "Index", "", new { @class = "btn btn-primary btn-icon" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
