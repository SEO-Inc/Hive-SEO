@model IEnumerable<Hive.Data.Project>
@{
	ViewBag.Title = "Projects";
	ViewBag.Description = "Manage projects";
}
@section css
{
	<link href="~/Scripts/datatables/dataTables.bootstrap.css" rel="stylesheet" />
}
@section scripts
{

	<script src="~/Scripts/datatables/js/jquery.dataTables.min.js"></script>
	<script src="~/Scripts/datatables/dataTables.bootstrap.js"></script>
	<script src="~/Scripts/datatables/yadcf/jquery.dataTables.yadcf.js"></script>
	<script src="~/Scripts/datatables/tabletools/dataTables.tableTools.min.js"></script>
}
<p>
	@Html.ActionLink("New Project", "Create", "", new { @class = "btn btn-primary btn-icon" })
</p>

<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Projects</h3>

		<div class="panel-options">
			<a href=" ">
				<span class="expand-icon">+</span>
			</a>
		</div>
	</div>
	<div class="panel-body">

		<script type="text/javascript">
					jQuery(document).ready(function($)
					{
						$("#projects-1").dataTable({
							aLengthMenu: [
								[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]
							]
						});
					});
		</script>

		<table id="projects-1" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Domain)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Account.CompanyName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.ContractProjectType)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.ProjectStatus.Status)
					</th>
					<th>

					</th>
				</tr>
			</thead>

			<tfoot>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Domain)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Account.CompanyName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.ContractProjectType)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.ProjectStatus.Status)
					</th>
					<th>
						
					</th>
				</tr>
			</tfoot>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<th>
							@Html.DisplayFor(modelItem => item.Domain.Name)
						</th>
						<td>
							@Html.DisplayFor(modelItem => item.Account.CompanyName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.ContractProjectType)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.ProjectStatus.Status)
						</td>
						<td>
							@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm btn-icon icon-left" })
							@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm btn-icon icon-left" })
							@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm btn-icon icon-left" })
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>
